# ============================================================
# MapTiles Stack Environment Configuration
# ============================================================
# Copy this file to .env and customize for your environment
# Usage: cp .env.example .env

# ============================================================
# Host Configuration
# ============================================================
# IP address to bind services (use 0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
HOST_IP=127.0.0.1

# ============================================================
# Service Ports (Host Machine)
# ============================================================
# These are the ports you'll access on your host machine
CADDY_HTTP_PORT=3002
CADDY_HTTPS_PORT=3003
MARTIN_PORT=3001
POSTGRES_PORT=5432
PGADMIN_PORT=3004

# ============================================================
# Caddy Configuration
# ============================================================
# Domain for Caddy server (use localhost:PORT for local dev)
TILES_DOMAIN=localhost:8080
TILES_SERVE_DOMAIN=localhost
TILES_EMAIL=admin@localhost

# ============================================================
# PostgreSQL/PostGIS Configuration
# ============================================================
POSTGRES_DB=gisdb
POSTGRES_USER=gisuser
POSTGRES_PASSWORD=changeme

# PostgreSQL Performance Tuning
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_WORK_MEM=16MB
POSTGRES_MAINTENANCE_WORK_MEM=128MB

# ============================================================
# Martin Tile Server Configuration
# ============================================================
MARTIN_KEEP_ALIVE=75
MARTIN_WORKER_PROCESSES=4

# ============================================================
# pgAdmin Configuration (Optional)
# ============================================================
PGADMIN_EMAIL=admin@localhost
PGADMIN_PASSWORD=changeme

# ============================================================
# Notes:
# ============================================================
# - HOST_IP: Set to 0.0.0.0 to allow external access (e.g., from other computers on network)
# - Ports: Change if you have conflicts with other services
# - TILES_DOMAIN: Internal Caddy domain (leave as localhost:8080 for local dev)
# - Access URLs will use HOST_IP and CADDY_HTTP_PORT, not TILES_DOMAIN
